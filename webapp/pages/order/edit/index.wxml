<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
     
      <input type="text" name="name" value='{{detail.name}}' placeholder="收货人姓名" />
    </view>
    <view class="section">
      <input type="text" name="mobile" value='{{detail.mobile}}' placeholder="电话号码" />
    </view>
    <view class="section">
        <view class="section__title"></view>
  <picker disabled='{{flag}}' bindchange="bindTypeChange" range-key='name' value="{{index}}" range="{{goods_type}}">
    <view class="picker">
     餐型：{{goods_type[index]['name']}}
    </view>
  </picker>
    </view>
    <!-- 时间 
    <view class="section">
            <picker mode="time" value="{{give_food_time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
    <view class="picker">
     送餐时间：{{give_food_time}}
    </view>
  </picker>
    </view>
    -->
    <view class="section">
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker">
     选择地址：{{region[0]}}{{region[1]}}{{region[2]}}
    </view>
    </picker>
    </view>
    <view class="section">
      <input type="text" class="ww" value='{{address2}}' name="address2" placeholder="输入详细地址，确保无误" />
    </view>
     <view class="section">
      <input type="text" disabled='true' class="ww" value='{{detail.remark}}' name="remark" placeholder="备注" />
    </view>
    <view>
      <label></label>
    </view>
    <view class="btn-area">
      <button formType="submit">确定修改</button>
    </view>
  </form>
</view>